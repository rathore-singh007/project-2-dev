pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/rathore-singh007/project-2-dev.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example deployment step (replace with actual deployment commands)
                sh 'kubectl apply -f deployment.yaml'
            }
        }
    }
}
